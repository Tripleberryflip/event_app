<% provide(:title, 'Coordinator Profile') %>
<div class="container">
	<center><p id="notice"><%= notice %></p>
	<h1> Welcome to your Event Coordinator profile page, <%= @event_coordinator.name %>!</h1>
	<h3>Personal Information:</h3>
	<p>
	  <b>Name:</b>
	  	<%= @event_coordinator.name %>
	  <br />
	  <b>Email:</b>
		<%= @event_coordinator.email %>
	  <br />
	  <%= link_to 'Edit your credentials', edit_event_coordinator_path(@event_coordinator) %>
	</p>

	<div class="container">
		<div id="events">
			<div data-role="header">Events coordinated by <%= @event_coordinator.name %></div>
			<% events = Event.for_coordinator(@event_coordinator) %>
			<%= render :partial => 'events/index', :locals => {:events => events } %>
		</div>
		<%= link_to "Create a new event", new_event_coordinator_event_path(@event_coordinator), id: "new_link" %> 
		<br />
	</div></center>
</div>
