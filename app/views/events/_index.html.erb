<div data-role="header">Events coordinated by <%= event_coordinator.name %></div>
<% events = Event.for_coordinator(event_coordinator) %>
<div data-role="collapsible-set" data-theme="a" data-content-theme="a" data-inset="true">
  <% events.each do |event| %>
  <table width='100%'>
    <td>  
    <div data-role="collapsible" width='100%'>
        <h1><%= event.name %></h1>
      <ul data-role="listview">
          <li data-icon="info"><%= link_to 'Show and update details for this event', event_coordinator_event_path(event.event_coordinator, event) %></li>
          <li data-icon="gear"><%= link_to 'Edit the event name', edit_event_coordinator_event_path(event.event_coordinator, event) %></li>
      </ul>
    </div></td>
    <td>
      <ul data-role="listview" id="accordion-delete-icon" data-theme="a", data-content-theme="a">
        <li data-icon="delete"><%= link_to 'delete', event_coordinator_event_path(event.event_coordinator, event), confirm: 'Are you sure you want to remove this event?', method: :delete %></li>
      </ul>
    </td>
  </table>
    <br>
  <% end %>
</div>