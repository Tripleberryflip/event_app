<div id="new_event">
  <%= form_for([@event.event_coordinator, @event], remote: true) do |f| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-c">
        <%= f.text_field :name, :placeholder => "Event name", :class => "ui-input-text ui-body-c" %>
      </div>
      
      <%= f.hidden_field :event_coordinator_id %>
    </div>
    
    <div class="actions">
      <div data-corners="true" data-shadow="true" data-iconshadow="true" data-wrapperels="span" data-theme="c" data-disabled="false" class="ui-submit ui-btn ui-shadow ui-btn-corner-all ui-btn-up-c" aria-disabled="false">
        <span class="ui-btn-inner">
          <span class="ui-btn-text">Create Event</span>
          <%= f.submit :class=>"ui-btn-hidden"%>
        </span>
      </div>
    </div>
  <% end %>
</div>